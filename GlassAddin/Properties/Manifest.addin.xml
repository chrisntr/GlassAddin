<?xml version="1.0" encoding="UTF-8"?>
<Addin namespace="GlassAddin" 
		id="GlassAddin" 
		name="Google Glass Extension" 
		author="ChrisNTR" 
		copyright="ChrisNTR" 
		url="http://chrisntr.github.io/"
		description="Templates and helpers for Google Glass development." 
		category="Mobile Development" 
		version="1.0">
	<Dependencies>
		<Addin id="::MonoDevelop.Core" version="4.0" />
		<Addin id="::MonoDevelop.Ide" version="4.0" />
	</Dependencies>
	<Runtime>
		<Import file = "GoogleGlassTemplate.xpt.xml"/>
		<Import file = "GlassApplication/AboutAssets.txt" />
		<Import file = "GlassApplication/AboutResources.txt" />
		<Import file = "GlassApplication/AndroidEnvironments.txt" />
		<Import file = "GlassApplication/AssemblyInfo.cs" />
		<Import file = "GlassApplication/Icon.png" />
		<Import file = "GlassApplication/MainActivity.cs" />
		<Import file = "GlassApplication/Resource.cs" />
	</Runtime>

	<Extension path = "/MonoDevelop/Ide/ProjectTemplates">
		<ProjectTemplate id   = "GoogleGlassTemplate"
		                 file = "GoogleGlassTemplate.xpt.xml"/>
	</Extension>


</Addin>
